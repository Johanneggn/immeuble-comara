<div class=" booking-client-new">
  <div class="recap-new-client">
    <div class="reminder-booking">
      <div class="row">

        <div class="photo-remind">
          <%= cl_image_tag @flat.picture.key, crop: :thumb, height: 200, width: 200, class: "photo-flat-remind"%>
        </div>
        <div class="info-remind">
          <div class="row">
            <h3><%= @flat.name %></h3>
          </div>
          <div class="row">
            <p><%= l(@booking.start_date, format: '%d %B') %> - <%= l(@booking.end_date, format: '%d %B %Y') %></p>
          </div>
          <div class="row">

          </div>
          <div class="row">
            <p> Prix total <%= @booking.total_price_xof.to_s.split("").reverse.each_slice(3).map {|y| y.join("").reverse}.reverse.join(" ")  %> XOF</p>
          </div>
        </div>
      </div>
      <div class="form-client-new">
        <%= render 'clients/form', flat: @flat, client: @client, booking: @booking %>
      </div>
    </div>
  </div>
</div>

