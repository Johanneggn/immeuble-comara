<div class="form-booking px-4">
  <%= simple_form_for [ @flat, @booking ], url: new_flat_booking_path(@flat), method: :get do |f| %>
    <% if @booking.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @booking.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :start_date,
                as: :string,
                required: true,
                input_html: {id: "range_start"},
                label: 'Dates d\'arrivée' %>
    <%= f.input :end_date,
                as: :string,
                required: true,
                input_html: {id: "range_end"},
                label: 'Date de départ' %>

    <%= f.input :travellers,
                as: :select,
                collection: Booking::TRAVELLERS,
                input_html: {class: "select2"},
                label: 'Nombre de Voyageurs' %>
              <div class="text-center">
                <p class="total-price-content pt-5 pb-1">Prix Total<span class="pl-5 ml-5" id="total-price-xof"></span>XOF</p>
                <p class="pb-1">Soit<span class="pl-2" id="total-price"></span>€</p>
              </div>
    <div class="d-flex flex-row-reverse mt-4 justify-content-center">
      <%= f.submit "Réservez", class: "button-booking" %>
    </div>
  <% end %>
</div>


