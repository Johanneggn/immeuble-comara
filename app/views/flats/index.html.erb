<div class="container-fluid">
  <div class="row text-right">
              <div class="index-show-search-bar">
                <div class="d-flex">
                  <%= form_tag flats_path, method: :get do %>

                    <%= text_field_tag :start_date_response,
                          params[:start_date_response],
                          input_html: {class: "datepicker"},
                          class: "datepicker-query",
                          placeholder: "Date de départ" %>

                    <%= text_field_tag :end_date_response,
                          params[:end_date_response],
                          input_html: {class: "end_date"},
                          class: "end-date-query",
                          placeholder: "Date de fin" %>

                    <%= text_field_tag :capacity_response,
                          params[:capacity_response],
                          class: "form-home-booking",
                          placeholder: "Nombre de voyageurs" %>

                    <%= submit_tag 'Modifiez',
                    class: "submit-index-show"%>
                  <% end %>
                </div>
              </div>
            </div>
  <% if @flats.count != 0 %>
    <div class="row">
      <div class="col-md-8">
        <div class="title-page-index-flats pt-5">
          <h1 class="ml-5 mt-5 title-index-flat">Résultats de votre recherche</h1>
        </div>
        <div class="index-flats ml-4">
          <% @flats.each do |flat| %>
            <%= link_to flat_path(flat), class: "link-show-flat" do %>
            <div class="flat-list m-4">
              <div class="d-flex">
                <div class="col-3 px-0 d-flex align-items-center">
                  <%= image_tag("191546988.jpg", crop: :fill, class: "photo-flat-index") %>
                </div>
                <div class="col-7">
                  <div class="row">
                    <div class="block-info">
                      <h3 class="pl-2 pt-2" id="flat-name-index"><%= flat.name %></h3>
                    </div>
                  </div>
                  <div class="row">
                    <div class="block-info">
                    </div>
                  </div>
                  <div class="row">
                    <div class="block-info">
                      <div class="d-flex">
                        <i class="fas fa-user mt-1 mr-2 pl-3 user-solid-index"></i>
                        <p  id="capacity-flat"><%= flat.capacity %> personnes</p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-2">
                  <div class="row">
                    <div class="block-info">
                    </div>
                  </div>
                  <div class="row">
                    <div class="block-info">
                      <p class="text-center" id="total-price-flat-index">130€</p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="block-info">
                      <div class="price-flat-index">
                        <p id="price-per-day-index"><%= flat.price_per_day %>€/jour</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>
        <div class="col-md-4">
          <div
            id="map"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
          ></div>
        </div>
    </div>
  <% else %>

  <% end %>

</div>
